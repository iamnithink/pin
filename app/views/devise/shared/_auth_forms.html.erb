<% signup_active = controller_name == 'registrations' %>
<div class="registration-page auth-combined-page">
  <div class="container">
    <div class="registration-form auth-combined-form">
      <div class="auth-tabs">
        <button type="button" class="auth-tab <%= 'active' unless signup_active %>" data-target="signin-form"><%= t('devise.shared.sign_in') %></button>
        <button type="button" class="auth-tab <%= 'active' if signup_active %>" data-target="signup-form"><%= t('devise.shared.sign_up') %></button>
      </div>

      <div id="signin-form" class="auth-panel <%= 'active' unless signup_active %>">
        <h2><%= t('devise.sessions.new.title') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, t('devise.sessions.new.email') %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
          </div>

          <div class="field">
            <%= f.label :password, t('devise.sessions.new.password') %>
            <%= f.password_field :password, autocomplete: "current-password", required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field checkbox-field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, t('devise.sessions.new.remember_me') %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t('devise.sessions.new.submit'), class: "btn-submit", data: { disable_with: t('devise.sessions.new.submitting', default: "Signing in...") } %>
          </div>
        <% end %>
      </div>

      <div id="signup-form" class="auth-panel <%= 'active' if signup_active %>">
        <h2><%= t('devise.registrations.new.title') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name, t('devise.registrations.new.name') %>
            <%= f.text_field :name, autocomplete: "name", required: true %>
          </div>

          <div class="field">
            <%= f.label :email, t('devise.registrations.new.email') %>
            <%= f.email_field :email, autocomplete: "email", required: true %>
          </div>

          <div class="field">
            <%= f.label :phone, t('devise.registrations.new.phone') %>
            <%= f.text_field :phone, autocomplete: "tel", placeholder: "10 digits (e.g., 9876543210)", required: true, pattern: "[0-9]{10}", maxlength: "10" %>
          </div>

          <div class="field">
            <%= f.label :pincode, "Pincode (Optional)" %>
            <%= f.text_field :pincode, autocomplete: "postal-code", placeholder: "6 digits (e.g., 560001)", pattern: "[0-9]{6}", maxlength: "6" %>
          </div>

          <div class="field">
            <%= f.label :address, "Address (Optional)" %>
            <%= f.text_area :address, autocomplete: "street-address", placeholder: "Your address", rows: 3 %>
          </div>

          <div class="field">
            <%= f.label :password, t('devise.registrations.new.password') %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t('devise.registrations.new.characters_minimum') %>)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", required: true %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, t('devise.registrations.new.password_confirmation') %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
          </div>

          <div class="actions">
            <%= f.submit t('devise.registrations.new.submit'), class: "btn-submit", data: { disable_with: t('devise.registrations.new.submitting', default: "Signing up...") } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.auth-tab');
    const panels = document.querySelectorAll('.auth-panel');

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        tabs.forEach((t) => t.classList.remove('active'));
        panels.forEach((p) => p.classList.remove('active'));
        tab.classList.add('active');
        document.getElementById(tab.dataset.target).classList.add('active');
      });
    });
  });
</script>

<style>
  .auth-combined-page {
    min-height: 100vh;
    background: linear-gradient(
      135deg,
      #1e40af 0%,
      #3b82f6 50%,
      #60a5fa 100%
    );
    padding: 40px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  [data-theme="dark"] .auth-combined-page {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
  }

  .auth-combined-page .container {
    width: 100%;
    max-width: 520px;
  }

  .auth-combined-form {
    background: var(--bg-card, white);
    padding: 32px;
    border-radius: 12px;
    box-shadow: 0 4px 20px var(--shadow, rgba(0,0,0,0.2));
    width: 100%;
    color: var(--text-primary, #333);
  }

  .auth-tabs {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }

  .auth-tab {
    flex: 1;
    border: 2px solid var(--accent, #3b82f6);
    background: transparent;
    color: var(--accent, #3b82f6);
    padding: 10px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .auth-tab.active {
    background: var(--accent, #3b82f6);
    color: white;
  }

  .auth-tab:hover:not(.active) {
    background: var(--bg-secondary, #f5f5f5);
  }

  .auth-panel {
    display: none;
  }

  .auth-panel.active {
    display: block;
  }

  .auth-combined-form h2 {
    text-align: center;
    color: var(--text-primary, #333);
    margin-bottom: 24px;
    font-size: 1.6rem;
  }

  .field {
    margin-bottom: 20px;
  }

  .field:last-of-type:not(.checkbox-field) {
    margin-bottom: 0;
  }

  .field label {
    display: block;
    margin-bottom: 8px;
    color: var(--text-primary, #333);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .field input,
  .field textarea {
    width: 100%;
    padding: 12px 14px;
    border: 2px solid var(--border-color, #e0e0e0);
    border-radius: 6px;
    font-size: 1rem;
    box-sizing: border-box;
    transition: border-color 0.3s ease, background-color 0.3s ease;
    font-family: inherit;
    background: var(--bg-primary, white);
    color: var(--text-primary, #333);
  }

  .field input:focus,
  .field textarea:focus {
    outline: none;
    border-color: var(--accent, #3b82f6);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .field textarea {
    resize: vertical;
    min-height: 80px;
  }

  .field em {
    font-size: 0.85rem;
    color: var(--text-secondary, #666);
    font-style: normal;
    font-weight: 400;
  }

  .checkbox-field {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 24px;
    margin-top: 4px;
  }

  .checkbox-field input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--accent, #3b82f6);
  }

  .checkbox-field label {
    margin: 0;
    font-weight: 400;
    cursor: pointer;
    color: var(--text-primary, #333);
  }

  .actions {
    margin-top: 28px;
    width: 100%;
  }

  /* Submit button with high specificity and proper checks */
  .auth-combined-form .actions input[type="submit"].btn-submit,
  .auth-combined-form .actions input.btn-submit,
  .auth-combined-form .actions button.btn-submit,
  .auth-panel .actions input[type="submit"].btn-submit,
  .auth-panel .actions input.btn-submit,
  .auth-panel .actions button.btn-submit,
  input.btn-submit,
  button.btn-submit {
    width: 100% !important;
    padding: 14px 24px !important;
    background: var(--accent, #3b82f6) !important;
    color: white !important;
    border: none !important;
    border-radius: 8px !important;
    font-size: 1rem !important;
    font-weight: 600 !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    margin: 0 !important;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3) !important;
    box-sizing: border-box !important;
    display: block !important;
    text-align: center !important;
    position: relative !important;
    overflow: hidden !important;
  }

  /* Hover state */
  .auth-combined-form .actions input[type="submit"].btn-submit:hover:not(:disabled),
  .auth-combined-form .actions input.btn-submit:hover:not(:disabled),
  .auth-combined-form .actions button.btn-submit:hover:not(:disabled),
  .auth-panel .actions input[type="submit"].btn-submit:hover:not(:disabled),
  .auth-panel .actions input.btn-submit:hover:not(:disabled),
  .auth-panel .actions button.btn-submit:hover:not(:disabled),
  input.btn-submit:hover:not(:disabled),
  button.btn-submit:hover:not(:disabled) {
    background: var(--accent-hover, #2563eb) !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4) !important;
  }

  /* Active state */
  .auth-combined-form .actions input[type="submit"].btn-submit:active:not(:disabled),
  .auth-combined-form .actions input.btn-submit:active:not(:disabled),
  .auth-combined-form .actions button.btn-submit:active:not(:disabled),
  .auth-panel .actions input[type="submit"].btn-submit:active:not(:disabled),
  .auth-panel .actions input.btn-submit:active:not(:disabled),
  .auth-panel .actions button.btn-submit:active:not(:disabled),
  input.btn-submit:active:not(:disabled),
  button.btn-submit:active:not(:disabled) {
    transform: translateY(0) !important;
    box-shadow: 0 2px 6px rgba(59, 130, 246, 0.3) !important;
  }

  /* Disabled state */
  .auth-combined-form .actions input[type="submit"].btn-submit:disabled,
  .auth-combined-form .actions input.btn-submit:disabled,
  .auth-combined-form .actions button.btn-submit:disabled,
  .auth-panel .actions input[type="submit"].btn-submit:disabled,
  .auth-panel .actions input.btn-submit:disabled,
  .auth-panel .actions button.btn-submit:disabled,
  input.btn-submit:disabled,
  button.btn-submit:disabled {
    opacity: 0.6 !important;
    cursor: not-allowed !important;
    transform: none !important;
  }

  /* Disabled hover state */
  .auth-combined-form .actions input[type="submit"].btn-submit:disabled:hover,
  .auth-combined-form .actions input.btn-submit:disabled:hover,
  .auth-combined-form .actions button.btn-submit:disabled:hover,
  .auth-panel .actions input[type="submit"].btn-submit:disabled:hover,
  .auth-panel .actions input.btn-submit:disabled:hover,
  .auth-panel .actions button.btn-submit:disabled:hover,
  input.btn-submit:disabled:hover,
  button.btn-submit:disabled:hover {
    background: var(--accent, #3b82f6) !important;
    transform: none !important;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3) !important;
  }

  /* Dark theme support */
  [data-theme="dark"] .auth-combined-form .actions input[type="submit"].btn-submit,
  [data-theme="dark"] .auth-combined-form .actions input.btn-submit,
  [data-theme="dark"] .auth-combined-form .actions button.btn-submit,
  [data-theme="dark"] .auth-panel .actions input[type="submit"].btn-submit,
  [data-theme="dark"] .auth-panel .actions input.btn-submit,
  [data-theme="dark"] .auth-panel .actions button.btn-submit,
  [data-theme="dark"] input.btn-submit,
  [data-theme="dark"] button.btn-submit {
    box-shadow: 0 2px 8px rgba(124, 142, 245, 0.3) !important;
  }

  [data-theme="dark"] .auth-combined-form .actions input[type="submit"].btn-submit:hover:not(:disabled),
  [data-theme="dark"] .auth-combined-form .actions input.btn-submit:hover:not(:disabled),
  [data-theme="dark"] .auth-combined-form .actions button.btn-submit:hover:not(:disabled),
  [data-theme="dark"] .auth-panel .actions input[type="submit"].btn-submit:hover:not(:disabled),
  [data-theme="dark"] .auth-panel .actions input.btn-submit:hover:not(:disabled),
  [data-theme="dark"] .auth-panel .actions button.btn-submit:hover:not(:disabled),
  [data-theme="dark"] input.btn-submit:hover:not(:disabled),
  [data-theme="dark"] button.btn-submit:hover:not(:disabled) {
    box-shadow: 0 4px 12px rgba(124, 142, 245, 0.4) !important;
  }

  @media (max-width: 768px) {
    .auth-combined-form {
      padding: 26px;
    }
  }
</style>
