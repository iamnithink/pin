<div class="static-page">
  <div class="container">
    <h1><%= t('static.contact.title') %></h1>
    <div class="content">
      <p><%= t('static.contact.description') %></p>
      <div class="contact-info">
        <p><strong><%= t('static.contact.email') %>:</strong> <a href="mailto:support@playinnear.com">support@playinnear.com</a></p>
        <p><strong><%= t('static.contact.phone') %>:</strong> <a href="tel:+911234567890">+91-1234567890</a></p>
      </div>
    </div>
  </div>
</div>

<style>
  .static-page {
    min-height: 100vh;
    background: var(--bg-secondary, #f8fafc);
    padding: 40px 0;
  }

  [data-theme="dark"] .static-page {
    background: var(--bg-primary, #0f172a);
  }

  .static-page .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
    background: var(--bg-card, #ffffff);
    border-radius: 8px;
    box-shadow: 0 2px 10px var(--shadow, rgba(15, 23, 42, 0.08));
    padding: 40px;
  }

  [data-theme="dark"] .static-page .container {
    background: var(--bg-card, #1e293b);
    box-shadow: 0 2px 10px var(--shadow, rgba(0, 0, 0, 0.4));
  }

  .static-page h1 {
    color: var(--text-primary, #1e293b);
    margin-bottom: 30px;
  }

  [data-theme="dark"] .static-page h1 {
    color: var(--text-primary, #f1f5f9);
  }

  .static-page .content {
    color: var(--text-secondary, #64748b);
    line-height: 1.8;
  }

  [data-theme="dark"] .static-page .content {
    color: var(--text-secondary, #94a3b8);
  }

  .static-page p {
    margin-bottom: 15px;
  }

  .contact-info a {
    color: var(--accent, #3b82f6);
    text-decoration: none;
  }

  .contact-info a:hover {
    text-decoration: underline;
    color: var(--accent-hover, #2563eb);
  }

  @media (max-width: 768px) {
    .static-page {
      padding: 20px 0;
    }

    .static-page .container {
      padding: 20px;
      margin: 0 10px;
    }

    .static-page h1 {
      font-size: 1.5rem;
      margin-bottom: 20px;
    }

    .static-page p {
      font-size: 0.9rem;
      line-height: 1.6;
    }
  }
</style>
